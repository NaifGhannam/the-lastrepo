@model TechJobPortal.Models.JobListing

<h2>@Model.Title</h2>

<div>
    <strong>Company:</strong> @Model.CompanyName
</div>
<div>
    <strong>Location:</strong> @Model.Location
</div>
<div>
    <strong>Job Type:</strong> @Model.JobType
</div>
<div>
    <strong>Posted on:</strong> @Model.PostedDate.ToString("MMM dd, yyyy") <!-- عرض التاريخ بتنسيق المطلوب -->
</div>

<a class="btn btn-secondary" asp-action="Index">Back to Listings</a>


